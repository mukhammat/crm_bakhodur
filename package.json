{
  "name": "crm_bakhodur",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:front\"",
    "dev:server": "concurrently \"tsc -w\" \"nodemon\"",
    "dev:front": "cd ./frontend && npm run dev",
    "build": "concurrently \"npm run build:server\" \"npm run build:front\"",
    "build:server": "tsc",
    "build:front": "cd ./frontend && npm run build",
    "start:server": "tsc && pm2 start dist/index.js --name crm_bakhodur_server",
    "start:front": "cd ./frontend && pm2 start 'npm run dev' --name crm_bakhodur_front",
    "generate": "npx drizzle-kit generate",
    "migrate": "npx drizzle-kit migrate",
    "genmig": "npm run generate && npm run migrate",
    "test": "vitest"
  },
  "dependencies": {
    "@grammyjs/conversations": "^2.1.0",
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.3",
    "bcrypt": "^6.0.0",
    "cron": "^4.3.3",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-seed": "^0.3.1",
    "eventemitter3": "^5.0.1",
    "firebase-admin": "^13.6.0",
    "grammy": "^1.38.2",
    "hono": "^4.9.6",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
